#include <stdio.h>

int binarySearch(int arr[], int n, int x)
{
    int low = 0, high = n - 1, mid;

    while (low <= high)
    {
        mid = (low + high) / 2;

        if (arr[mid] == x)
            return mid;
        else if (arr[mid] < x)
            low = mid + 1;
        else
            high = mid - 1;
    }

    return -1;
}

int main()
{
    int arr[] = {1, 5, 6, 7, 9, 10};
    int n = 6;
    int x = 6;
    int result;

    result = binarySearch(arr, n, x);

    if (result != -1)
        printf("Element found at location %d", result);
    else
        printf("Element not found");

    return 0;
}
