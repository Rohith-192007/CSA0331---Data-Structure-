#include <stdio.h>

struct Node {
    int data;
    struct Node *next;
};

int isPalindrome(struct Node *head)
{
    int arr[100];
    int i = 0, j;
    struct Node *temp = head;


    while (temp != NULL)
    {
        arr[i] = temp->data;
        i++;
        temp = temp->next;
    }

 
    for (j = 0; j < i / 2; j++)
    {
        if (arr[j] != arr[i - j - 1])
            return 0;   
    }

    return 1;   
}

int main()
{
    struct Node n1, n2, n3, n4;

    n1.data = 1;  n1.next = &n2;
    n2.data = 2;  n2.next = &n3;
    n3.data = 2;  n3.next = &n4;
    n4.data = 1;  n4.next = NULL;

    if (isPalindrome(&n1))
        printf("true");
    else
        printf("false");

    return 0;
}
