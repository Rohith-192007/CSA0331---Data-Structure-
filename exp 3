#include <stdio.h>

struct Node {
    int data;
    struct Node *next;
};

int countNodes(struct Node *head)
{
    int count = 0;
    struct Node *temp = head;

    while (temp != NULL)
    {
        count++;
        temp = temp->next;
    }

    return count;
}

int main()
{
    struct Node n1, n2, n3, n4, n5;

    n1.data = 1;  n1.next = &n2;
    n2.data = 2;  n2.next = &n3;
    n3.data = 3;  n3.next = &n4;
    n4.data = 5;  n4.next = &n5;
    n5.data = 8;  n5.next = NULL;

    printf("%d", countNodes(&n1));

    return 0;
}
